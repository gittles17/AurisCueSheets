{
  "name": "auris-cue-sheets",
  "version": "0.15.0",
  "private": true,
  "main": "electron/main.js",
  "description": "Cue sheet management app for music supervisors",
  "author": "Auris",
  "scripts": {
    "dev": "vite --port 5200",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5200 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0"
  },
  "build": {
    "appId": "com.auris.cuesheets",
    "productName": "Auris Cue Sheets",
    "artifactName": "${productName}-v${version}-${arch}.${ext}",
    "directories": {
      "output": "/tmp/auris-build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": "Jonathan Gitlin (YP6TURPH32)",
      "notarize": {
        "teamId": "YP6TURPH32"
      }
    },
    "afterPack": "scripts/afterPack.js",
    "publish": {
      "provider": "github",
      "owner": "gittles17",
      "repo": "AurisCueSheets"
    }
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@phosphor-icons/react": "^2.1.10",
    "@supabase/supabase-js": "^2.90.1",
    "better-sqlite3": "^11.0.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "exceljs": "4.3.0",
    "fast-xml-parser": "^4.3.2",
    "music-metadata": "^7.14.0",
    "puppeteer-core": "^21.0.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-window": "^2.2.5",
    "tmp": "^0.2.5"
  },
  "devDependencies": {
    "@electron/notarize": "^2.3.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^32.2.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  }
}
